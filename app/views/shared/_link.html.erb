<div class="link">
	<div class="main">
		<h3><span class="link_fav"><%= image_tag(link.favicon_url, :class=>"bordered-fav") if link.favicon_url %></span> <span class="link_title"><%= link_to (link.title[0..60] + 'â€¦'), link.url %></span></h3>
		<div class="description"><p><%= link.description %><span class="dots desc"> ...</span></p></div>
		<div class="info">
			<h5><%= link_to link.display_url, link.url %><span class="pipe"></span><span class="author"><%= "| " + link.author if link.author %></span></h5>
			
			<h5 id="time">Shared by <%= link_to User.find(link.user_id).name, user_path(User.find(link.user_id)) %> <%= time_ago_in_words(link.created_at) + " ago"%></h5>
		</div>
	</div>
	<div class="side">

					<%= link_to edit_link_path(link) do %>
						<i class='icon-pencil icon'></i> Edit
					<% end %>
					<%= link_to link_path(link), :method=>:delete, :confirm => "Are you sure?" do %>
						<i class='icon-trash icon'></i> Delete
					<% end %>

				</div>
</div>